<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MVideoPlayer">

        <attr name="mvp_source" format="string" />
        <attr name="mvp_title" format="string" />

        <attr name="mvp_playDrawable" format="reference" />
        <attr name="mvp_pauseDrawable" format="reference" />
        <attr name="mvp_restartDrawable" format="reference" />

        <attr name="mvp_menu" format="reference" />

        <attr name="mvp_hideControlsOnPlay" format="boolean" />
        <attr name="mvp_autoPlay" format="boolean" />
        <attr name="mvp_loop" format="boolean" />
        <attr name="mvp_showTotalDuration" format="boolean" />
        <!--
            Show a preview of the current progress on the bottom of the video.
            Kind of like the Youtube player.
        -->
        <attr name="mvp_showBottomProgressBar" format="boolean" />
        <attr name="mvp_gestureType">
            <enum name="NoGesture" value="0" />
            <enum name="SwipeGesture" value="1" />
            <enum name="DoubleTapGesture" value="2" />
        </attr>
        <attr name="mvp_showToolbar" format="boolean" />
        <attr name="mvp_hideControlsDuration" format="integer" />

        <attr name="mvp_disableControls" format="boolean" />

        <attr name="mvp_autoFullscreen" format="boolean" />

        <attr name="mvp_captionSize" format="dimension" />
        <attr name="mvp_captionColor" format="color" />

    </declare-styleable>

</resources>